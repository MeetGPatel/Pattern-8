#include<stdio.h>
#include<conio.h>
void main()
{
    int i,j,x;
    clrscr();
    for(i=1;i<=4;i++)
    {
      x=1;
      for(j=1;j<=7;j++)
      {
	      if(j>=5-i&&j<=3+i)
	      {
		printf("%d",x);
		j<4?x++:x--;
	      }
	      else
	      {
	           printf(" ");
	      }
      }
      printf("\n");
    }
    getch();
}
